---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Patrick Brady â€” Software Engineering Blog',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Read the Blog',
        href: '/blog',
      },
      { text: 'About Me', href: '/about' },
    ]}
  >
    <Fragment slot="title">
      Hi, I'm <span class="text-accent dark:text-white">Patrick Brady</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="block mb-4">
        I'm a software engineer passionate about building scalable systems, clean code, and sharing what I learn along
        the way.
      </span>
      <span class="text-muted dark:text-slate-300">
        This blog covers web development, system design, and technical deep dives into interesting problems.
      </span>
    </Fragment>
  </Hero>

  <!-- BlogLatestPost Widget **************** -->

  <BlogLatestPosts
    title="Latest Posts"
    information={`Explore my recent articles on software engineering, web development, and technology.`}
  />
</Layout>
